<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/cell_currency_icon_text"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bgr_currency_icon"
        android:gravity="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <TextView
        android:id="@+id/cell_currency_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:minHeight="32dp"
        app:layout_constraintEnd_toStartOf="@id/cell_currency_code"
        app:layout_constraintStart_toEndOf="@id/cell_currency_icon_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Basic Attention Token" />

    <TextView
        android:id="@+id/cell_currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:minHeight="32dp"
        app:layout_constraintEnd_toStartOf="@id/cell_currency_chevron"
        app:layout_constraintStart_toEndOf="@id/cell_currency_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BAT" />

    <ImageView
        android:id="@+id/cell_currency_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_chevron_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>